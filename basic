fruitList.size();


//write a SOQL query to receive opportunity records from Salesforce
List<Opportunity> recentWonOpp = [SELECT ID, Name, Amount FROM Opportunity WHERE IsCLOSE =TRUE ORDER BY DESC LIMIT 1];





